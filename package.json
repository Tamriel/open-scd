{
  "name": "openscd-monorepo",
  "version": "0.0.1",
  "description": "OpenSCD base distribution and plugins",
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "clean": "lerna run clean",
    "build": "npx nx run-many -t build --all",
    "doc": "lerna run doc",
    "test": "npx nx run-many -t test --all --parallel=false",
    "graph": "npx nx graph",
    "start": "lerna run start",
    "serve": "nx run @openscd/distribution:serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openscd/open-scd.git"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@nx/jest": "18.3.4",
    "@nx/js": "18.3.4",
    "@nx/plugin": "^18.3.4",
    "@swc-node/register": "~1.8.0",
    "@swc/cli": "~0.1.62",
    "@swc/core": "~1.3.85",
    "@swc/helpers": "~0.5.2",
    "@types/jest": "^29.4.0",
    "@types/node": "18.16.9",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "lerna": "^7.1.4",
    "nx": "18.3.4",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "~5.4.2"
  },
  "dependencies": {
    "@nx/devkit": "18.3.4",
    "tslib": "^2.3.0"
  }
}
