{
  "name": "openscd-monorepo",
  "version": "0.0.1",
  "description": "OpenSCD base distribution and plugins",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean",
    "build": "npx nx run-many -t build --all",
    "doc": "lerna run doc",
    "test": "npx nx run-many -t test --all --parallel=false",
    "graph": "npx nx graph",
    "start": "lerna run start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openscd/open-scd.git"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@nx/js": "^19.0.1",
    "@swc-node/register": "~1.8.0",
    "@swc/core": "~1.3.85",
    "@swc/helpers": "~0.5.2",
    "@types/node": "18.16.9",
    "lerna": "^7.1.4",
    "nx": "18.3.4",
    "prettier": "^2.6.2",
    "typescript": "~5.4.2"
  },
  "dependencies": {}
}
