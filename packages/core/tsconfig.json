{
  "compilerOptions": {
    "target": "es2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2018", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declaration": true,
    "importHelpers": true,
    "outDir": "./dist",
    "sourceMap": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "inlineSources": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "incremental": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/test/**/*.ts"
  ]
}
