{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": ".",
  },
  "include": ["*.ts"],
  "exclude": [
    "test/*.ts"
  ]
}
